<%- model_class = Event -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @event.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:brief) %>:</strong></dt>
  <dd><%= @event.brief %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date) %>:</strong></dt>
  <dd><%= @event.date %></dd>
</dl>

<br>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Num</th>
      <th>user name</th>
      <th>Attend flg</th>
      <th>Comment</th>
      <th>登録日時</th>
    </tr>
  </thead>

  <tbody>
    <% @events_users.each do |events_user| %>
      <tr>
        <td><%= "num" %></td>
        <td><%= events_user.user.name %></td>
        <td><%= @attend[events_user.attend_flg] %></td>
        <td><%= events_user.comment %></td>
        <td><%= events_user.updated_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="form-actions">
  <%= link_to '出欠登録をする', 
              new_event_events_user_path(@event),
              :class => 'btn btn-primary'  %>
  <br><br>

  <%= link_to t('.back', :default => t("helpers.links.back")),
              events_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_event_path(@event), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              event_path(@event),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
